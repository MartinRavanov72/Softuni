<div id="edit-listing">
    <form id="edit-car-form" action="#/cars/edit" method="POST">
        <div class="container">
            <h1>Edit Car Listing</h1>
            <p>Please fill in this form to edit an listing.</p>
            <hr>
            <input type="hidden" name="carId" value="" />

            <p>Title</p>
            <input type="text" placeholder="Enter Title" name="title" value="">

            <p>Description</p>
            <input type="text" placeholder="Enter Description" name="description" value="">

            <p>Car Brand</p>
            <input type="text" placeholder="Enter Car Brand" name="brand" value="">

            <p>Car Model</p>
            <input type="text" placeholder="Enter Car Model" name="model" value="">

            <p>Car Year</p>
            <input type="number" placeholder="Enter Car Year" name="year" value="">

            <p>Car Image</p>
            <input type="text" placeholder="Enter Car Image" name="imageUrl" value="">

            <p>Car Fuel Type</p>
            <input type="text" placeholder="Enter Car Fuel Type" name="fuel" value="">

            <p>Car Price</p>
            <input type="number" placeholder="Enter Car Price" name="price" value="">

            <hr>
            <button type="submit" class="registerbtn">Edit Listing</button>
        </div>
    </form>
</div>


<script>
    $(function () {
        $('#edit-car-form').on('submit', function (ev) {
            let isValid = true;
            if ($("input[name='title']").val().trim().length > 33) {
                isValid = false;
                showError('Title should not exceed 33 characters.');
            }
            else if ($("input[name='description']").val().trim().length < 30 || $("input[name='description']").val().trim().length > 450) {
                isValid = false;
                showError('Description should be between 30 and 450 symbols long.');
            }
            else if ($("input[name='brand']").val().trim().length > 11) {
                isValid = false;
                showError('Brand should not be more than 11 symbols long.');
            }
            else if ($("input[name='fuel']").val().trim().length > 11) {
                isValid = false;
                showError('Fuel should not be more than 11 symbols long.');
            }
            else if ($("input[name='model']").val().trim().length > 11) {
                isValid = false;
                showError('Model should not be more than 11 symbols long.');
            }
            else if ($("input[name='model']").val().trim().length < 4) {
                isValid = false;
                showError('Model should be more than 3 symbols long.');
            }
            else if ($("input[name='year']").val().trim().length !== 4) {
                isValid = false;
                showError('Year should be exactly 4 symbols long.');
            }
            else if (+$("input[name='price']").val().trim() > 1000000) {
                isValid = false;
                showError('Price should be less than 1000000.');
            }

            if (!isValid) {
                ev.preventDefault();
                ev.stopPropagation();
            }
        });
    });
</script>