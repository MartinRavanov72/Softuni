<div id="create-meme">
    <form id="createForm" action="#/memes/create" method="POST">
        <div class="container">
            <h1>Create Meme</h1>
            <p>Please fill in this form to create an meme.</p>

            <p>Title</p>
            <input type="text" placeholder="Enter Title" name="title" required>

            <p>Description</p>
            <input type="text" placeholder="Enter Description" name="description" required>

            <p>Meme Image</p>
            <input type="text" placeholder="Enter meme ImageUrl" name="imageUrl" required>

            <button type="submit" class="registerbtn">Create Meme</button>
        </div>
    </form>
</div>

<script>
    $(function () {
        $('#createForm').on('submit', function (ev) {
            let isValid = true;
            if ($("input[name='title']").val().trim().length > 33) {
                isValid = false;
                showError('Title should not exceed 33 characters.');
            }
            else if ($("input[name='description']").val().trim().length < 30 || $("input[name='description']").val().trim().length > 450) {
                isValid = false;
                showError('Description should be between 30 and 450 symbols long.');
            }
            if (!isValid) {
                ev.preventDefault();
                ev.stopPropagation();
            }
        });
    });
</script>