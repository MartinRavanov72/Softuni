{{#if oldInput._id}}
<form class="text-center border border-light p-5" action="/courses/edit/{{oldInput._id}}" method="POST">
    {{else}}
    <form class="text-center border border-light p-5" action="/courses/edit/{{_id}}" method="POST">
        {{/if}}

        <h1>Edit Course</h1>
        <div class="form-group">
            <label for="title">Title</label>
            {{#if oldInput.title}}
            <input type="text" class="form-control" placeholder="Course name" value="{{oldInput.title}}" name="title">
            {{else}}
            <input type="text" class="form-control" placeholder="Course name" value="{{title}}" name="title">
            {{/if}}
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            {{#if oldInput.description}}
            <textarea class="form-control" placeholder="Description"
                name="description">{{oldInput.description}}</textarea>
            {{else}}
            <textarea class="form-control" placeholder="Description" name="description">{{description}}</textarea>
            {{/if}}
        </div>
        <div class="form-group">
            <label for="imageUrl">Image url</label>
            {{#if oldInput.imageUrl}}
            <input type="text" class="form-control" placeholder="Image Url" value="{{oldInput.imageUrl}}"
                name="imageUrl">
            {{else}}
            <input type="text" class="form-control" placeholder="Image Url" value="{{imageUrl}}" name="imageUrl">
            {{/if}}
        </div>
        <div class="form-group">
            <label for="duration">Duration</label>
            {{#if oldInput.duration}}
            <input type="text" class="form-control" placeholder="4 weeks" value="{{oldInput.duration}}" name="duration">
            {{else}}
            <input type="text" class="form-control" placeholder="4 weeks" value="{{duration}}" name="duration">
            {{/if}}
        </div>

        <button class="btn btn-primary">Edit</button>
    </form>